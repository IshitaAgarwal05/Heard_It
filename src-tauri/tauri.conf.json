{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.heardit.app",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Heard It",
        "width": 900,
        "height": 600
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "default",
          "permissions": ["core:default"]
        }
      ]
    }
  },
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  }
}
